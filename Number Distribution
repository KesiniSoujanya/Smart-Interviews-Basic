#include <stdio.h>
#include <stdlib.h>

int main() {
    int n,i;
    scanf("%d",&n);
    int a[n],c1=0,c2=0,c3=0;
    for (i=1;i<=n;i++){
        scanf("%d",&a[i]);
        if(a[i]>0){
            c1+=1;
        }
        else if(a[i]<0){
            c2+=1;
        }
        else{
            c3+=1;
        }
    }
        printf("%d %d %d",c3,c1,c2);
        
    return 0;
}
